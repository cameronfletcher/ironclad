{
  "urls": "http://*:5005;",
  "server": {
    "issuer_uri": "http://ironclad.io",
    "respect_x_forwarded_for_headers": true,
    "signing_certificate": {
    }
  },
  "api": {
    "authority": "http://localhost:5005",
    "audience": "auth_api"
  },
  "visual": {
    "stylesFile": "css/default.css",
    "logoFile":  "img/icon.jpg"
  },
  "serilog": {
    "minimumLevel": {
      "default": "Debug",
      "override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "writeTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "RollingFile",
              "Args": {
                "pathFormat": "logs/ironclad/ironclad-developer-{Date}.log"
              }
            }
          ]
        }
      }
    ]
  }
}